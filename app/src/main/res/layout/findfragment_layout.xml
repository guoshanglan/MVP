<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_alignLeft="@+id/tv_city_findactive_fragment"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tv_search_findhudong"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:background="@drawable/search_activity_shape"
            android:drawableLeft="@drawable/fangdajing_search"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="搜索"
            android:maxLines="1"
            android:textColor="#f9f9f9"
            android:paddingLeft="20dp"

            android:singleLine="true"
            android:textSize="12sp" />
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView_agenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#4aca53"
                android:text="找活动"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView_agenda"
                android:layout_marginLeft="41dp"
                android:layout_marginStart="41dp"
                android:layout_toEndOf="@+id/textView_agenda"
                android:layout_toRightOf="@+id/textView_agenda"
                android:text="主办方"
                android:textColor="#444444"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#888888"></View>


