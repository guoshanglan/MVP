<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="bottom"
        android:background="@drawable/bg_ticketdetail_date"
        android:orientation="vertical"
        android:id="@+id/id_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/tv_cancel"
                android:textSize="16sp"
                android:textColor="#c6c6c6"
                android:text="取消"/>

            <TextView
                android:id="@+id/tv_title"
                android:text="请选择开始时间"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/text_right"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:id="@+id/tv_save"
                android:textSize="16sp"
                android:text="确定"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cecece"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">


            <com.example.administrator.hdx_conference_mvp.widview.wheelview.WheelView
                android:id="@+id/wl_year"
                android:layout_gravity="left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:textColorCenter="@color/text_color"
                app:itemVisibleNum="3"
                app:lineSpaceingDimens="15dp"
                app:textSizeCenter="16sp"
                app:textSizeOuter="14sp"
                app:lineColor="@color/transparent"
                app:isLoop="false"
                app:textColorOuter="#888888" />



            <com.example.administrator.hdx_conference_mvp.widview.wheelview.WheelView
                android:id="@+id/wl_mouth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                app:textColorCenter="@color/text_color"
                app:itemVisibleNum="3"
                app:textSizeCenter="16sp"
                app:textSizeOuter="14sp"
                app:isLoop="false"
                app:lineColor="@color/transparent"
                app:lineSpaceingDimens="15dp"
                app:textColorOuter="#888888"   />

            <com.example.administrator.hdx_conference_mvp.widview.wheelview.WheelView
                android:id="@+id/wl_date"
                android:layout_width="0dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:textColorCenter="@color/text_color"
                app:lineColor="@color/transparent"
                app:itemVisibleNum="3"
                app:lineSpaceingDimens="15dp"
                app:textSizeCenter="16sp"
                app:textSizeOuter="14sp"
                app:isLoop="false"
                app:textColorOuter="#888888" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>